{
  "name": "Areteans_Extensions_StarRating",
  "label": "Star Rating",
  "description": "Advanced Star Rating ",
  "organization": "Areteans",
  "version": "1.0.0",
  "library": "Extensions",
  "allowedApplications": [],
  "componentKey": "Areteans_Extensions_StarRating",
  "type": "Field",
  "subtype": "Text",
  "icon": "images/pz-text-input-active.svg",
  "properties": [

    {
      "name": "label",
      "label": "Field label",
      "format": "TEXT",
      "required": true
    },
    {
      "name": "readOnly",
      "label": "Edit mode",
      "format": "READONLY"
    },
    {
      "label": "Column settings",
      "format": "GROUP",
      "visibility": "@VIEWTYPE == 'MultiRecordDisplayAsTable'",
      "properties": [
        {
          "name": "columnWidth",
          "label": "Column width",
          "format": "SELECT",
          "source": [
            {
              "key": "auto",
              "value": "Auto"
            },
            {
              "key": "custom",
              "value": "Custom"
            }
          ]
        },
        {
          "name": "width",
          "label": "Width (px)",
          "format": "NUMBER",
          "visibility": "$this.columnWidth == 'custom'"
        },
        {
    "allowHalf": {
      "type": "boolean",
      "default": false,
      "description": "Allow half-star selection"
    },
    "showRatingNumber": {
      "type": "boolean",
      "default": true,
      "description": "Show rating number next to stars"
    },
    "starCount": {
      "type": "number",
      "default": 5,
      "description": "Number of stars"
    },
    "fullColor": {
      "type": "string",
      "default": "gold",
      "description": "Color for full stars"
    },
    "halfColor": {
      "type": "string",
      "default": "gold",
      "description": "Color for half stars"
    },
    "emptyColor": {
      "type": "string",
      "default": "#ccc",
      "description": "Color for empty stars"
    },
    "labels": {
      "type": "array",
      "items": { "type": "string" },
      "default": [],
      "description": "Labels for each rating value"
    },
    "animationScale": {
      "type": "number",
      "default": 1.2,
      "description": "Scale animation on hover"
    },
    "showClear": {
      "type": "boolean",
      "default": false,
      "description": "Show clear/reset button"
    },
    "rtl": {
      "type": "boolean",
      "default": false,
      "description": "Right-to-left layout"
    }
  }
      ]
    },
    {
      "label": "Input settings",
      "format": "GROUP",
      "visibility": "(!readOnly = true)",
      "properties": [
        {
          "name": "placeholder",
          "label": "Placeholder",
          "format": "TEXT"
        },
        {
          "name": "helperText",
          "label": "Helper text",
          "format": "TEXT"
        }
      ]
    },
    {
      "label": "Conditions",
      "format": "GROUP",
      "properties": [
        {
          "name": "required",
          "label": "Required",
          "format": "REQUIRED",
          "visibility": "(!readOnly = true)"
        },
        {
          "name": "disabled",
          "label": "Disabled",
          "format": "DISABLED",
          "visibility": "(!readOnly = true)"
        },
        {
          "name": "visibility",
          "label": "Visibility",
          "format": "VISIBILITY"
        }
      ]
    },
    {
      "label": "Advanced",
      "format": "GROUP",
      "collapsible": true,
      "properties": [
        {
          "name": "testId",
          "label": "Test ID",
          "format": "TEXT",
          "ignorePattern": "[^-_\\p{N}\\p{L}]",
          "includeAnnotations": false
        }
      ]
    }
  ],
  "defaultConfig": {
    "label": "@L $this.label",
    "detailFVLItem": true,
    "isFormWidth" : false,
    "isContainerWidth" : false
  },
  "displayName": "Star Rating"
}
